<section class="aboutUs">
  <div class="title revealText">
    <span class="revealText-inner"
      >DETAIL <span class="dot"></span> PASSION {" "}<span class="dot"></span>
      {" "} INNOVATION</span
    >
  </div>
</section>

<style lang="scss">
  @import "../styles/variables";
  @import "../styles/animations";
  @import "../styles/mixins";
  .aboutUs {
    .title {
      background-image: url(/public/images/bg-author-bio-dark.jpg);

      border-top: 3px solid $color-primary;
      border-bottom: 3px solid $color-primary;
      @include media(mobile) {
        height: 15vh;
      }
      @include media(tablet) {
        height: 15vh;
      }
      @include media(desktop) {
        height: 30vh;
      }

      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
      animation-name: moveInLeft;
      animation-duration: 1s;
      animation-timing-function: ease-in;
      span {
        color: $color-white;
        @include media(mobile) {
          font-size: calc(19px + 0.390625vw);
        }
        @include media(tablet) {
          font-size: calc(19px + 0.390625vw);
        }
        @include media(desktop) {
          font-size: calc(32px + 0.390625vw);
        }
        font-weight: 500;
        margin-bottom: 0;
        margin-top: 0;
      }
    }
  }
  .revealText {
    position: relative;
    content: "";
  }
  .revealText-inner {
    opacity: 0;
    transform: translateX(-150px);
    transition: 1s all ease;
  }
  .revealText-inner.active {
    transform: translateX(0);
    opacity: 1;
  }
  .revealText.active::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 1;
  }
  .dot {
    height: 10px;
    width: 10px;
    background-color: $color-white;
    border-radius: 50%;
    display: inline-block;
    margin: 10px;
  }
</style>
